
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to hotels for the demo app
    match /hoteles/{hotelId} {
      allow read: if true;
      allow write: if false; // Disallow writing from the client
    }

    // Allow public read access to VIP membership codes for activation check
    match /vip_memberships/{membershipId} {
      allow read: if true;
      allow write: if false; // Disallow writing from the client
    }

    // Secure user data: only the authenticated user can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
